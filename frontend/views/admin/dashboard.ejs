<%- include('../partials/header') %>

<div class="container mt-5">
  <h2>ðŸ“Š Admin Dashboard</h2>

  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card text-bg-primary mb-3">
        <div class="card-body">
          <h5>Total Parcels</h5>
          <p class="fs-3"><%= data.totalParcels %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-bg-warning mb-3">
        <div class="card-body">
          <h5>In Transit</h5>
          <p class="fs-3"><%= data.statusCount.transit %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card text-bg-success mb-3">
        <div class="card-body">
          <h5>Delivered</h5>
          <p class="fs-3"><%= data.statusCount.delivered %></p>
        </div>
      </div>
    </div>
  </div>

  <h4 class="mt-4">Top Destinations</h4>
  <ul class="list-group col-md-6">
    <% data.topDestinations.forEach(dest => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= dest._id %>
        <span class="badge bg-secondary rounded-pill"><%= dest.count %></span>
      </li>
    <% }) %>
  </ul>
</div>

<%- include('../partials/footer') %>
