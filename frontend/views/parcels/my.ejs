<%- include('../partials/header') %>

<div class="container mt-5">
  <h2 class="text-center mb-4">ðŸ“¦ My Parcels</h2>

  <% if (!parcels || parcels.length === 0) { %>
    <div class="alert alert-info text-center">No parcels created yet.</div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Tracking ID</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Description</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Logs</th>
            <th>Receipt</th>
          </tr>
        </thead>
        <tbody>
          <% parcels.forEach(p => { %>
            <tr>
              <td><%= p.trackingId %></td>
              <td><%= p.sender %></td>
              <td><%= p.receiver %></td>
              <td><%= p.description %></td>
              <td><%= p.destination %></td>
              <td><span class="badge bg-secondary"><%= p.status %></span></td>
              <td><%= new Date(p.createdAt).toLocaleString() %></td>
              <td>
                <% if (p.logs && p.logs.length > 0) { %>
                  <ul class="list-unstyled mb-0">
                    <% p.logs.forEach(log => { %>
                      <li>
                        <strong><%= log.status %></strong> @ <%= log.location %> <br />
                        <small class="text-muted"><%= new Date(log.timestamp).toLocaleString() %></small>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <span class="text-muted">No logs yet</span>
                <% } %>
              </td>
              <td>
                <a class="btn btn-sm btn-primary" 
                  href="http://localhost:5000/api/parcels/<%= p._id %>/download-receipt?token=<%= token %>" 
                  target="_blank" rel="noopener noreferrer">
                  Download
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
